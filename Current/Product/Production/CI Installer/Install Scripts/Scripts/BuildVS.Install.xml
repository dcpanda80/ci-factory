<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://nant.sf.net/schemas/nant.xsd" name="BuildVSInstaller" >

  <property name="BuildVS.SolutionFile" value="${Common.Directory.Build.Path}\${ProjectName}BuildScripts.sln"/>
  <property name="BuildVS.PackagesProjectFile" value="${Common.Directory.Build.Path}\Build.csproj"/>
  <property name="BuildVS.OpenSolutionBat" value="${Common.Directory.Build.Path}\OpenSolution.bat"/>

  <!-- These are private... -->

  <property name="Private.BuildVS.DefaultSolutionFile" value="${SourceBuildDirectory}\Build.sln.remove"/>
  <property name="Private.BuildVS.DefaultPackagesProjectFile" value="${SourceBuildDirectory}\Build.csproj.remove"/>
  <property name="Private.BuildVS.DefaultOpenSolutionBat" value="${SourceBuildDirectory}\OpenSolution.bat"/>
  
  <target name="BuildVS.Install" depends="BuildVS.ValidateParameters" >
    <copy file="${Private.BuildVS.DefaultSolutionFile}" tofile="${BuildVS.SolutionFile}" overwrite="True"/>
    <copy file="${Private.BuildVS.DefaultPackagesProjectFile}" tofile="${BuildVS.PackagesProjectFile}"  overwrite="True"/>
    <copy file="${SourceBuildDirectory}\Personal.Build.csproj.remove" tofile="${Common.Directory.Build.Path}\Personal.Build.csproj"  overwrite="True"/>
    
    <copy tofile="${BuildVS.OpenSolutionBat}" file="${Private.BuildVS.DefaultOpenSolutionBat}" overwrite="True">
      <filterchain refid="Common.FilterChain" />
    </copy>
  </target>

  <target name="BuildVS.ValidateParameters">

  </target>

</project>