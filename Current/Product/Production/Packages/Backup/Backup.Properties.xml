<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://nant.sf.net/schemas/nant.xsd" name="Backup.Properties">
  
  <fileset id="Backup.CCNETFiles" basedir="${BuildDirectory}\server">
    <include name="${string::replace(string::to-lower(CCNetLogFilePath), string::to-lower(BuildDirectory) + '\server\', '')}"/>
    <include name="${string::replace(CCNetProject, ' ', '')}.state"/>
  </fileset>

  <fileset id="Backup.PublishFiles" basedir="${ArtifactRootDirectory}">
    <include name="${Common.ArtifactFolderName}\**\*"/>
  </fileset>

  <property name="Backup.BackupRepositoryDirectory" value="%Backup.BackupRepositoryDirectory%"/>
  <property name="Backup.CCNetServerDirectory" value="${Backup.BackupRepositoryDirectory}\server"/>
  <property name="Backup.ArtifactsDirectory" value="${Backup.BackupRepositoryDirectory}\Artifacts"/>
  
</project>