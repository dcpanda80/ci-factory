<?xml version="1.0" encoding="utf-8" ?>
<project xmlns="http://nant.sf.net/schemas/nant.xsd" name="Workspace.TomCat.Scripts">

  <target name="Workspace.RequieredSoftware.TomCat">
    <ifnot test="${file::exists(environment::get-variable('ProgramFiles') + '\Apache Software Foundation\Tomcat 6.0\bin\tomcat6.exe')}" >
      <ask answer="Answer"
           question="It looks like the Tomcat is not installed.  This software is required.  Do you wish to install the software?"
           caption="Proceed Without Required Software?"
           showdialog="true" >
        <options>
          <string value="Install"/>
          <string value="Exit"/>
        </options>
      </ask>
      <ifthenelse test="${Answer == 'Install'}">
        <then>
          <get
              src="${Workspace.Ftp.Url}tomcat6-silent-setup.msi"
              dest="${environment::get-variable('TEMP')}\tomcat6-silent-setup.msi"
          />
          <exec workingdir="${environment::get-variable('TEMP')}" program="msiexec" commandline="/i ${environment::get-variable('TEMP')}\tomcat6-silent-setup.msi /q" verbose="true" />
          <setenv>
            <environment refid="${Common.EnvironmentVariables.RefId}" />
          </setenv>
          <exec
            workingdir="${environment::get-variable('ProgramFiles')}\Apache Software Foundation\Tomcat 6.0\bin"
            program="cmd"
            commandline="/C service.bat uninstall"
          />
          <exec
            workingdir="${environment::get-variable('ProgramFiles')}\Apache Software Foundation\Tomcat 6.0\bin"
            program="cmd"
            commandline="/C service.bat install"
          />
        </then>
        <elseif if="${Answer == 'Exit'}">
          <fail message="Please install Tomcat!" />
        </elseif>
      </ifthenelse>
    </ifnot>
  </target>

</project>