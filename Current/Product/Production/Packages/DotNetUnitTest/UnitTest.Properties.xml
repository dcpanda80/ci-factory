<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://nant.sf.net/schemas/nant.xsd" name="UnitTest.Properties">
  <property name="UnitTest.TestAssemblyFormat" value="Test.*.dll"/>
  
  <fileset id="UnitTest.ProjectFiles">
    <include name="${Common.Directory.UnitTest.Path}\**\*.*proj"/>
  </fileset>
  
  <property name="UnitTest.ReportFolder" value="${Common.Directory.Build.Path}\Unit Test Reports"/>
  <property name="UnitTest.ReportNameFormat" value="${string::replace(ProjectName, ' ', '_')}UnitTests"/>
  <property name="UnitTest.ReportFormat" value="Xml" overwrite="false"/>

  <property name="UnitTest.PublishXmlReport" value="False"/>

  <if test="${file::exists(Common.Directory.Packages.Path + '\Alerts\Alerts.Properties.xml')}">
    <include buildfile="${Common.Directory.Packages.Path}\Alerts\Alerts.Properties.xml"/>
    <if test="${stringlist::contains('Alerts.TargetListId', 'Alerts.UnitTests')}">
      <property name="UnitTest.PublishXmlReport" value="True"/>
    </if>
  </if>

</project>