<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://nant.sf.net/schemas/nant.xsd" name="UnitTest.Properties">
  <property name="UnitTest.TestAssemblyFormat" value="Test.*.dll"/>
  
  <fileset id="UnitTest.ProjectFiles">
    <include name="${Common.Directory.UnitTest.Path}\**\*.*proj"/>
  </fileset>
  
  <property name="UnitTest.ReportFolder" value="${Common.Directory.Build.Path}\Unit Test Reports"/>
  <property name="UnitTest.ReportNameFormat" value="${string::replace(ProjectName, ' ', '_')}UnitTests"/>
  <property name="UnitTest.ReportFormat" value="Xml" overwrite="false"/>

  <property name="UnitTest.PublishXmlReport" value="False"/>

  <property name="UnitTest.AdvancedConfiguration.Enabled"              value="false" overwrite="false"/>
  <property name="UnitTest.AdvancedConfiguration.ExcludeByCategory"    value="" overwrite="false"/> <!-- Can be comma-delimited -->
  <property name="UnitTest.AdvancedConfiguration.FilterByAuthor"       value="" overwrite="false"/> <!-- Can be comma-delimited -->
  <property name="UnitTest.AdvancedConfiguration.FilterByCategory"     value="" overwrite="false"/> <!-- Can be comma-delimited -->
  <property name="UnitTest.AdvancedConfiguration.FilterByNamespace"    value="" overwrite="false"/> <!-- Can be comma-delimited -->
  <property name="UnitTest.AdvancedConfiguration.FilterByType"         value="" overwrite="false"/> <!-- Can be comma-delimited -->
  <property name="UnitTest.AdvancedConfiguration.Other"                value="" overwrite="false"/> <!-- Can be used to support any other switches not covered by the above properties. -->
  <property name="UnitTest.AdvancedConfiguration.MbUnitConsExe"        value="${Common.Directory.ThirdParty.Path}\MbUnit\MbUnit.Cons.exe" overwrite="false"/>

  <if test="${file::exists(Common.Directory.Packages.Path + '\Alerts\Alerts.Properties.xml')}">
    <property name="Package.Alerts.Directory.Path" value="${Common.Directory.Packages.Path}\Alerts"/>
    <include buildfile="${Common.Directory.Packages.Path}\Alerts\Alerts.Properties.xml"/>
    <if test="${stringlist::contains('Alerts.TargetListId', 'Alerts.UnitTests')}">
      <property name="UnitTest.PublishXmlReport" value="True"/>
    </if>
  </if>

</project>